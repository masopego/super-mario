<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SuperMario" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/mario_blue</item>
        <item name="colorPrimaryDark">@color/mario_yellow</item>
        <item name="colorAccent">@color/mario_red</item>

        <!-- SplashScreen cofiguration-->
        <item name="android:windowSplashScreenBackground">
            @color/mario_blue
        </item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/mario
        </item>
        <item name="android:windowSplashScreenAnimationDuration">3000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">
            @color/mario_red
        </item>

    </style>

    <style name="Theme.SuperMario" parent="Base.Theme.SuperMario" />
</resources>